<Window x:Class="TNTExpress.Windows.Manager.WinManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TNTExpress.Windows.Manager"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Авторизация" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <Grid Height="30"
              VerticalAlignment="Top"
              Grid.ColumnSpan="2"
              Background="{DynamicResource Orange}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="tbDragger"/>

            <Button x:Name="btnHidde"
                        Grid.Column="1"
                        Style="{DynamicResource SmallButtons}">
                <materialDesign:PackIcon Kind="Minus"/>
            </Button>

            <Button x:Name="btnClose"
                        Grid.Column="2"
                        Style="{DynamicResource SmallButtons}">
                <materialDesign:PackIcon Kind="Close"/>
            </Button>
        </Grid>

        <Grid Grid.Row="1"
              Grid.Column="0"
              Background="LightGray">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition />
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid Background="{DynamicResource MightOrange}">
                <Image x:Name="imgLogo" 
                   Source="/TNTExpress;component/Resources/TNT_logo_express.png"
                   Width="150"
                   Height="75"/>
            </Grid>
            
            <StackPanel Grid.Row="1">
                <Button Content="Обработка"
                        Style="{DynamicResource MainMenuButton}"/>
                <Button Content="Сортировка"
                        Style="{DynamicResource MainMenuButton}"/>
                <Button Content="Парковка"
                        Style="{DynamicResource MainMenuButton}"/>
                <Button Content="Морковка"
                        Style="{DynamicResource MainMenuButton}"/>
            </StackPanel>

            <UniformGrid Grid.Row="2"
                         Rows="0"
                         Columns="2">
                <Button Style="{DynamicResource ExtraMenuButton}">
                    <materialDesign:PackIcon Kind="ArrowLeft"
                                             Height="25"
                                             Width="30"/>
                </Button>
                <Button Style="{DynamicResource ExtraMenuButton}">
                    <materialDesign:PackIcon Kind="QuestionMarkRhombusOutline"
                                             Height="25"
                                             Width="30"/>
                </Button>
            </UniformGrid>
        </Grid>

        <Grid Grid.Row="1"
              Grid.Column="1"
              Background="GhostWhite">
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock x:Name="tbHeadLine"
                       Style="{DynamicResource TextBlockHeadLine}">
                Обработка
            </TextBlock>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <DataGrid>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Login"/>
                        <DataGridTextColumn Header="Password"/>
                        <DataGridTextColumn Header="Role"/>
                    </DataGrid.Columns>    
                </DataGrid>

                <materialDesign:DrawerHost HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           BorderThickness="2"
                                           Grid.Row="1">
                    <materialDesign:DrawerHost.BottomDrawerContent>
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Margin="4"
                                       HorizontalAlignment="Center"
                                       Grid.ColumnSpan="2">
                                Меню
                            </TextBlock>

                            <StackPanel Orientation="Horizontal"
                                        Grid.ColumnSpan="2"
                                        Grid.Row="1">
                                <Button x:Name="btnAdd"
                                        Content="Добавить"
                                        Style="{DynamicResource ActionButton}"/>
                                <Button x:Name="btnEdit"
                                        Content="Изменить"
                                        Style="{DynamicResource ActionButton}"/>
                                <Button x:Name="btnDelete"
                                        Content="Удалить"
                                        Style="{DynamicResource ActionButton}"/>
                            </StackPanel>
                            
                            <Button Grid.Column="1"
                                    Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                                    CommandParameter="{x:Static Dock.Bottom}"
                                    Margin="4"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Style="{DynamicResource SmallButtons}"
                                    Foreground="{DynamicResource Black}">
                                <materialDesign:PackIcon Kind="Close"/>
                            </Button>
                        </Grid>
                    </materialDesign:DrawerHost.BottomDrawerContent>

                    <Button Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}"
                            CommandParameter="{x:Static Dock.Bottom}"
                            Style="{DynamicResource ExtraMenuButton}"
                            Grid.Row="1"
                            Grid.Column="2"
                            Margin="4">
                        <materialDesign:PackIcon Kind="Plus" />
                    </Button>
                </materialDesign:DrawerHost>

                <materialDesign:Snackbar x:Name="snack" 
                                         IsActive="False"
                                         Grid.Row="2">
                    <materialDesign:SnackbarMessage x:Name="snackMessage"
                                                    ActionContent="OK"
                                                    ActionClick="snackMessage_ActionClick"/>
                </materialDesign:Snackbar>
            </Grid>
        </Grid>

        <!--<Border BorderBrush="Black"
                BorderThickness="1"
                Grid.RowSpan="2"
                Grid.ColumnSpan="2"/>-->
    </Grid>
</Window>

<Window x:Class="TNTExpress.Windows.Manager.WinManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TNTExpress.Windows.Manager"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
        xmlns:view="clr-namespace:TNTExpress.Veiws"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Авторизация" Height="840" Width="1080"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Icon="/TNTExpress;component/Resources/TNTExpress_logo_menu.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <Grid Height="30"
              VerticalAlignment="Top"
              Grid.ColumnSpan="2"
              Background="{DynamicResource Orange}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="tbDragger"/>

            <Button x:Name="btnHidde"
                        Grid.Column="1"
                        Style="{DynamicResource SmallButtons}">
                <materialDesign:PackIcon Kind="Minus"/>
            </Button>

            <Button x:Name="btnClose"
                        Grid.Column="2"
                        Style="{DynamicResource SmallButtons}">
                <materialDesign:PackIcon Kind="Close"/>
            </Button>
        </Grid>

        <Grid Grid.Row="1"
              Grid.Column="0"
              Background="LightGray">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition />
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid Background="{DynamicResource MightOrange}">
                <Image x:Name="imgLogo" 
                   Source="/TNTExpress;component/Resources/TNTExpress_logo.png"
                   Width="150"
                   Height="75"/>
            </Grid>

            <StackPanel Grid.Row="1">
                <Button x:Name="btnUser"
 Style="{DynamicResource MainMenuButton}">
                    <TextBlock TextAlignment="Center">
                        Пользователи
                        <LineBreak/>
                        системы
                    </TextBlock>
                </Button>

                <Button x:Name="btnEmployee" Content="Сотрудники"
                        Style="{DynamicResource MainMenuButton}"/>
                <Button Content="Парковка"
                        Style="{DynamicResource MainMenuButton}"/>
                <Button Content="Морковка"
                        Style="{DynamicResource MainMenuButton}"/>
            </StackPanel>

            <UniformGrid Grid.Row="2"
                         Rows="0"
                         Columns="2">
                <Button x:Name="btnBack" 
                        Style="{DynamicResource ExtraMenuButton}">
                    <materialDesign:PackIcon Kind="ArrowLeft"
                                             Height="25"
                                             Width="30"/>
                </Button>
                <Button Style="{DynamicResource ExtraMenuButton}">
                    <materialDesign:PackIcon Kind="QuestionMarkRhombusOutline"
                                             Height="25"
                                             Width="30"/>
                </Button>
            </UniformGrid>
        </Grid>

        <Grid Grid.Row="1"
              Grid.Column="1">



            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock x:Name="tbHeadLine"
                   Style="{DynamicResource TextBlockHeadLine}">
                Сотрудники
            </TextBlock>

            <view:MangerView x:Name="managerView"
                             Visibility="Hidden"
                             Grid.Row="1"
                             Grid.Column="1"/>


            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="0.5*"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="dgEmployee"
                          AutoGenerateColumns="False"
                          IsReadOnly="True" SelectionChanged="dgUser_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Имя"
                                        Binding="{Binding FirstName}"
                                        Width="125"
                                        MinWidth="150"/>
                        <DataGridTextColumn Header="Фамилия"
                                        Binding="{Binding LastName}"
                                        Width="125"
                                        MinWidth="150"/>
                        <DataGridTextColumn Header="Логин"
                                        Binding="{Binding Login}"
                                        Width="125"
                                        MinWidth="150"/>
                        <DataGridTextColumn Header="Номер телефона"
                                        Binding="{Binding PhoneNumber}"
                                        Width="125"
                                        MinWidth="150"/>
                        <DataGridTextColumn Header="Почта"
                                        Binding="{Binding Email}"
                                        Width="*"
                                        MinWidth="150"/>
                    </DataGrid.Columns>
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Удалить"
                                  Click="MenuItem_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>

                <StackPanel VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Margin="0 0 10 0">
                    <TextBox x:Name="tbSearch"
                         Width="150"
                         Height="25"
                         Margin="10"
                         CaretBrush="{DynamicResource Black}"
                         materialDesign:HintAssist.Hint="Поиск по фамилии"
                         materialDesign:HintAssist.Foreground="{DynamicResource Black}"
                         materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource Transparent}"
                         BorderBrush="Transparent"/>
                    <materialDesign:PackIcon Kind="Search"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Center"
                                         Height="20"
                                         Width="20"
                                         Margin="0 0 5 0"/>
                </StackPanel>
                <Rectangle Stroke="Black"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Width="190" Height="35"
                       Margin="0 5 10 0"/>


                <UniformGrid Grid.Row="1"
                             Columns="2">
                    <dragablz:TabablzControl>
                        <TabItem Header="Добавить пользователя">
                            <StackPanel Margin="10">
                                <TextBox x:Name="tbLogin"
                                     Style="{StaticResource MaterialDesignFilledTextFieldTextBox}"
                                     VerticalAlignment="Top"
                                     Margin="0 10"
                                     CaretBrush="{DynamicResource Black}"
                                     materialDesign:HintAssist.Hint="Логин"
                                     materialDesign:HintAssist.Foreground="{DynamicResource Black}"
                                     materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource Orange}"/>
                                <TextBox x:Name="tbPassword"
                                      Style="{StaticResource MaterialDesignFilledTextFieldTextBox}"
                                      VerticalAlignment="Top"
                                      Margin="0 10"
                                      CaretBrush="{DynamicResource Black}"
                                      materialDesign:HintAssist.Hint="Пароль"
                                      materialDesign:HintAssist.Foreground="{DynamicResource Black}"
                                      materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource Orange}"/>
                                <ComboBox x:Name="cbRole"
                                      materialDesign:HintAssist.Hint="Роль"
                                      materialDesign:HintAssist.Foreground="{DynamicResource Black}"
                                      materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource Orange}"
                                      MinWidth="72"
                                      Margin="15 10"
                                      ItemsSource="{Binding LongListToTestComboVirtualization}"
                                      Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                                    <ComboBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel />
                                        </ItemsPanelTemplate>
                                    </ComboBox.ItemsPanel>
                                </ComboBox>
                                <Button x:Name="btnAddUser"
                                    Content="Добавить пользователя"
                                    Style="{DynamicResource ActionButton}"
                                    Width="250"
                                    Margin="0 15"
                                    Click="btnAddUser_Click"/>
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="Изменить пользователя">
                            <StackPanel Margin="10">
                                <TextBox x:Name="tbEditLogin"
                                     Style="{StaticResource MaterialDesignFilledTextFieldTextBox}"
                                     Text="{Binding SelectedItem.Login, ElementName=dgUser}"
                                     VerticalAlignment="Top"
                                     Margin="0 10"
                                     CaretBrush="{DynamicResource Black}"
                                     materialDesign:HintAssist.Hint="Логин"
                                     materialDesign:HintAssist.Foreground="{DynamicResource Black}"
                                     materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource Orange}"/>
                                <TextBox x:Name="tbEditPassword"
                                     Style="{StaticResource MaterialDesignFilledTextFieldTextBox}"
                                     Text="{Binding SelectedItem.Password, ElementName=dgUser}"
                                     VerticalAlignment="Top"
                                     Margin="0 10"
                                     CaretBrush="{DynamicResource Black}" materialDesign:HintAssist.Hint="Пароль"
                                     materialDesign:HintAssist.Foreground="{DynamicResource Black}"
                                     materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource Orange}"/>
                                <ComboBox x:Name="cbEditRole"
                                      Text="{Binding SelectedItem.NameRole, ElementName=dgUser}"
                                      materialDesign:HintAssist.Hint="Роль"
                                      materialDesign:HintAssist.Foreground="{DynamicResource Black}"
                                      materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource Orange}"
                                      MinWidth="72"
                                      Margin="15 10"
                                      ItemsSource="{Binding LongListToTestComboVirtualization}"
                                      Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                                    <ComboBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel />
                                        </ItemsPanelTemplate>
                                    </ComboBox.ItemsPanel>
                                </ComboBox>
                                <Button x:Name="btnEditUser"
                                    IsEnabled="False"
                                    Content="Изменить пользователя"
                                    Style="{DynamicResource ActionButton}"
                                    Width="250"
                                    Margin="0 15"
                                    Click="btnEditUser_Click"/>
                            </StackPanel>
                        </TabItem>
                    </dragablz:TabablzControl>

                    <materialDesign:DialogHost Style="{StaticResource MaterialDesignEmbeddedDialogHost}"
                                           DialogMargin="8">
                        <materialDesign:DialogHost.DialogContent>
                            <StackPanel Margin="16">
                                <TextBox x:Name="tbAddRole"
                                     Style="{StaticResource MaterialDesignFilledTextFieldTextBox}"
                                     VerticalAlignment="Top"
                                     MaxWidth="400"
                                     Text="{Binding dg}"
                                     CaretBrush="{DynamicResource Black}"
                                     materialDesign:HintAssist.Hint="Добавить роль"
                                     materialDesign:HintAssist.Foreground="{DynamicResource Black}"
                                        materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource Orange}"/>
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right">
                                    <Button x:Name="btnAddRole"
                                        Style="{DynamicResource ActionButton}"
                                        Margin="0 8 8 0"
                                        Command="materialDesign:DialogHost.CloseDialogCommand"
                                        Click="btnAddRole_Click">
                                        Добавить
                                    </Button>
                                    <Button Style="{DynamicResource ActionButton}"
                                        IsCancel="True"
                                        Margin="0 8 8 0"
                                        Command="materialDesign:DialogHost.CloseDialogCommand">
                                        <Button.CommandParameter>
                                            <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                                False
                                            </system:Boolean>
                                        </Button.CommandParameter>
                                        Закрыть
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:DialogHost.DialogContent>
                        <Border BorderThickness="1"
                            BorderBrush="Gray"
                            ClipToBounds="True"
                            HorizontalAlignment="Stretch">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <ListBox x:Name="lbRole"/>

                                <materialDesign:ColorZone Background="Gray"
                                                      BorderBrush="Gray"
                                                      Grid.Row="1"
                                                      Effect="{DynamicResource MaterialDesignShadowDepth5}">
                                    <TextBlock Margin="16"
                                           Style="{DynamicResource TextBlock}"
                                           HorizontalAlignment="Left">
                                        Роли
                                    </TextBlock>
                                </materialDesign:ColorZone>
                                <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                                    Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Right"
                                    Grid.Row="0"
                                    Margin="0 0 28 -20">
                                    <materialDesign:PackIcon Kind="Plus"
                                                         Height="22"
                                                         Width="22" />
                                </Button>
                            </Grid>
                        </Border>
                    </materialDesign:DialogHost>
                </UniformGrid>


            </Grid>
            <materialDesign:Snackbar x:Name="snack"
                                 MessageQueue="{materialDesign:MessageQueue}"
                                 IsActive="False"
                                 Grid.Row="2">
                <materialDesign:SnackbarMessage x:Name="snackMessage"
                                                ActionContent="OK"/>
            </materialDesign:Snackbar>

            <!--<Border BorderBrush="{DynamicResource Black}"
                BorderThickness="1"
                Grid.RowSpan="2"
                Grid.ColumnSpan="2"/>-->
        </Grid>
    </Grid>
</Window>